<Root>:
    FloatLayout:
        MDTopAppBar:
            title: 'Список покупок'
            pos_hint: {'top': 1}
            elevation: 4
            size_hint_y: None
            height: '56dp'
            # right_action_items: [["theme-light-dark", lambda x: root.toggle_theme()]]
            right_action_items: [['theme-light-dark', lambda x: root.callback(x)]]

        MDList:
            id: item_list
            pos_hint: {'top': 0.88}
            padding: 10
            spacing: 10

        MDRoundFlatIconButton:
            icon: 'plus'
            text: 'Добавить'
            pos_hint: {'center_x': 0.5, 'y': 0.02}
            size_hint: None, None
            size: '200dp', '50dp'
            on_release: root.show_add_dialog()